        <properties>  
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />            
            <property name="hibernate.connection.provider_class" value="org.hibernate.connection.ProxoolConnectionProvider" />
        	<property name="hibernate.proxool.pool_alias" value="demodb" />
       		<property name="hibernate.proxool.xml" value="/config/proxool.xml" />
            <property name="hibernate.max_fetch_depth" value="3" />  
            <property name="hibernate.hbm2ddl.auto" value="update" />  
        </properties>  
